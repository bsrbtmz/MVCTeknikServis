
@{
    ViewBag.Title = "Sorgula";
    Layout = "~/Views/Shared/WebLayout.cshtml";
}

@model List<TeknikServis.DAL.Islem>

<div class="overlay-fluid-block">
    <div class="container text-center">
        <div class="row">
            <div class="home-wrapper">
                <div @*class="col-md-10 col-md-offset-1"*@>
                    <div class="home-content">
                        <h1>Cihaz Sorgula</h1>

                        <div class="row">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>İşlem Numarası</th>
                                        <th>Servis Durumu </th>
                                        <th>Servis Yeri</th>
                                        <th>Garanti Durumu</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var u in Model)
                                    {
                                        <tr>
                                            @if (u.Urun == null)
                                            {
                                                <td></td>
                                            }
                                            else
                                            {

                                                <td>@u.Urun.IslemNo</td>
                                            }

                                            @if (u.ServisDurum == null)
                                            {
                                                <td></td>
                                            }
                                            else
                                            {

                                                <td>@u.ServisDurum.ServisDurum1</td>
                                            }
                                            @if (u.ServisYeri == null)
                                            {
                                                <td></td>
                                            }
                                            else
                                            {

                                                <td>@u.ServisYeri.ServisYeri1</td>
                                            }
                                            @if (u.Urun == null)
                                            {
                                                <td></td>
                                            }
                                            else
                                            {

                                                if (u.Urun.Garantilimi == true)
                                                {
                                                    <td>Garantili Ürün </td>
                                                }
                                                else
                                                {
                                                    <td>Garanti Dışı Ürün</td>
                                                }
                                            }

                                        </tr>
                                    }



                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

